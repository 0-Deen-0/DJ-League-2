@model IEnumerable<DJ_s_League.Models.Game>

@{
    ViewData["Title"] = "Games that are being hosted";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #0a0b0d;
            color: #fff;
            padding: 0;
        }

        h1 {
            color: #fff;
            text-align: center;
            margin-top: 40px;
        }

        p {
            text-align: center;
            margin-top: 20px;
        }

        .table {
            width: 90%;
            margin: 20px auto;
            background-color: #1c1c1c;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(255, 77, 77, 0.5);
            overflow: hidden;
        }

            .table th, .table td {
                padding: 15px;
                text-align: left;
            }

            .table th {
                background-color: #ff4d4d;
                color: white;
            }

            .table td {
                background-color: #333;
                color: #fff;
            }

            .table a {
                text-decoration: none;
                color: #ff4d4d;
                padding: 5px 10px;
                border: 1px solid #ff4d4d;
                border-radius: 5px;
                transition: all 0.3s ease-in-out;
            }

                .table a:hover {
                    background-color: #ff4d4d;
                    color: white;
                    box-shadow: 0 5px 20px rgba(255, 77, 77, 0.7);
                }

        footer {
            background-color: #1c1c1c;
            color: #ff4d4d;
            padding: 30px 20px;
            text-align: center;
            border-top: 2px solid #ff4d4d;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <footer>
        <p>&copy; 2024 DJ League. All Rights Reserved.</p>
    </footer>
</body>
</html>
